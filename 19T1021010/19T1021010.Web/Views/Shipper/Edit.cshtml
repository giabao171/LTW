@model _19T1021010.DomainModels.Shipper
@{ }

<div class="box box-primary">
    <div class="box-body">

        <form action="~/Shipper/Save" method="post">

            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.ShipperID)


            <div class="form-group col-sm-8">
                <label>Tên nhân viên giao hàng</label>
                @Html.TextBoxFor(m => m.ShipperName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ShipperName, "", new { @style = "color: #f00" })
            </div>

            <div class="form-group col-sm-8">
                <label>Số điện thoại</label>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Phone, "", new { @style = "color: #f00" })
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-8">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Shipper" class="btn btn-warning"><i class="fa fa-ban"></i> Quay lại</a>
                </div>
            </div>

        </form>
    </div>
</div>

