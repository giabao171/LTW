@model _19T1021010.DomainModels.Shipper

@{
    ViewBag.Title = $"Xóa nhân viên giao hàng {Model.ShipperName}";
}

<div class="box box-danger">
    <div class="box-body">

        <form class="form-horizontal" action="~/Shipper/Delete/@Model.ShipperID" method="post">

            <div class="form-group">
                <label class="control-label col-sm-2">Tên nhân viên giao hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ShipperName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Phone</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-8">
                    @if (_19T1021010.BusinessLayers.CommonDataService.InSusedShipper(Model.ShipperID))
                    {
                        <p style="color: red; font-size: 15px">Không được xóa người vận chuyển này</p>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="glyphicon glyphicon-trash"></i>
                            Đồng ý xóa
                        </button>
                    }

                    <a href="~/Shipper" class="btn btn-warning"><i class="fa fa-ban"></i> Quay lại</a>
                </div>
            </div>

        </form>
    </div>
</div>

