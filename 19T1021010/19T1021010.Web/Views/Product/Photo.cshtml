@model _19T1021010.DomainModels.ProductPhoto
@{

}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/Product/SavePhoto" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" name="PhotoID" value="@Model.PhotoID" />
            <input type="hidden" name="ProductID" value="@Model.ProductID" />

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="col-sm-10">
                    <input type="file"
                           class="form-control"
                           id="PhotoUpload"
                           name="uploadPhoto"
                           onchange="document.getElementById('Photoup').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input name="Photo" type="hidden" value="@Model.Photo" />
                    @if (Model.Photo != null)
                    {
                        <img id="Photoup" class="img-rounded" style="width: 120px; height: 150px;" src="@Model.Photo" />
                    }

                    @if (Model.Photo == null)
                    {
                        <img id="Photoup" class="img-rounded" style="width: 120px; height: 150px;" src="https://www.shutterstock.com/image-vector/no-image-avatar-vector-icon-260nw-2054244497.jpg" />
                    }
                    @Html.ValidationMessageFor(m => m.Photo, "", new { @style = "color: #f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @style = "color: #f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.DisplayOrder, "", new { @style = "color: #f00" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10 checkbox">
                    <label>
                        <input type="checkbox" name="IsHidden" value="true" checked="@Model.IsHidden">
                        Ẩn ảnh (không hiển thị với khách hàng)
                    </label>

                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/product/edit/@Model.ProductID">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>

