@model _19T1021010.DomainModels.Employee
@{
    ViewBag.Title = $"Xóa nhân viên {Model.FirstName} {Model.LastName}";
}

<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Delete/@Model.EmployeeID" method="Post">
            <div class="form-group col-sm-8">
                <label class="control-label col-sm-2">Họ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.FirstName</p>
                </div>
            </div>

            <div class="form-group col-sm-8">
                <label class="control-label col-sm-2">Tên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.LastName</p>
                </div>
            </div>

            <div class="form-group col-sm-8">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.BirthDate</p>
                </div>
            </div>


            <div class="form-group col-sm-8">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>

            <div class="form-group col-sm-8">
                <label class="control-label col-sm-2">Ghi chú:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Notes</p>
                </div>
            </div>

            <div class="form-group col-sm-8">
                <label class="control-label col-sm-2">Ảnh</label>
                <div class="col-sm-10">
                    <img class="img-rounded" style="width: 120px; height: 150px;" src="~/Photo/@Model.Photo" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (_19T1021010.BusinessLayers.CommonDataService.InSusedEmployee(Model.EmployeeID))
                    {
                        <p style="color: red; font-size: 15px">Không được xóa nhân viên này</p>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="glyphicon glyphicon-trash"></i>
                            Đồng ý xóa
                        </button>
                    }

                    <a href="~/Employee" class="btn btn-warning"><i class="fa fa-ban"></i> Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</div>

