            <div class="form-group col-sm-8">
                <label class="control-label col-sm-2">Ảnh</label>
                <div class="col-sm-10">
                    <input type="file"
                           class="form-control"
                           id="PhotoUpload"
                           name="uploadPhoto"
                           onchange="document.getElementById('Photoup').src = window.URL.createObjectURL(this.files[0])" />

                </div>
            </div>

            <div class="form-group col-sm-8">
                <label class="control-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input name="Photo" type="hidden" value="@Model.Photo" />
                    @if (Model.Photo != null)
                    {
                        <img id="Photoup" class="img-rounded" style="width: 120px; height: 150px;" src="~/Photo/@Model.Photo" />
                    }

                    @if (Model.Photo == null)
                    {
                        <img id="Photoup" class="img-rounded" style="width: 120px; height: 150px;" src="https://www.shutterstock.com/image-vector/no-image-avatar-vector-icon-260nw-2054244497.jpg" />
                    }
                    @Html.ValidationMessageFor(m => m.Photo, "", new { @style = "color: #f00" })
                </div>
               
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Employee" class="btn btn-warning"><i class="fa fa-ban"></i> Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</div>

