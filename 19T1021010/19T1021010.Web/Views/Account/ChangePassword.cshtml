
@{
    ViewBag.Title = "ChangePassword";
}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Account/ChangePassword" method="post">

            @{
                var userAccount = Converter.CookieToUserAccount(User.Identity.Name);
            }

            <input name="userName" value="@userAccount.Email" type="hidden">
            @*<input value="@userAccount.Password" type="text">*@
            <div class="form-group col-sm-8">
                <label class="control-label col-sm-2">Mật khẩu cũ</label>
                <div class="col-sm-10">
                    <input name="oldPassword" value="" type="password" class="form-control" placeholder="">

                </div>
            </div>

            <div class="form-group col-sm-8">
                <label class="control-label col-sm-2">Mật khẩu mới</label>
                <div class="col-sm-10">
                    <input name="newPassword" value="" type="password" class="form-control" placeholder="">

                </div>
            </div>

            <div class="form-group col-sm-8">
                <label class="control-label col-sm-2">Xác nhận mật khẩu mới</label>
                <div class="col-sm-10">
                    <input name="confirmPassword" value="" type="password" class="form-control" placeholder="">

                </div>
            </div>

            <div class="form-group col-sm-8">
                <label class="control-label col-sm-2"></label>
                <div class="col-sm-10">
                    <span class="col-sm-13" style="color: red; font-size: 15px;">@ViewBag.PasswordErr </span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Đổi mật khẩu
                    </button>
                    <a href="~/" class="btn btn-warning">Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</div>

