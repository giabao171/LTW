@model _19T1021010.DomainModels.Category
@{
    
}

<div class="box box-primary">
    <div class="box-body">

        <form action="~/Category/Save" method="post">
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.CategoryID)

            <div class="form-group col-sm-8">
                <label>Tên loại hàng</label>
                @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CategoryName, "", new { @style = "color: #f00" })
            </div>

            <div class="form-group col-sm-8">
                <label>Mô tả</label>
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description, "", new { @style = "color: #f00" })
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-8">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Category" class="btn btn-warning"><i class="fa fa-ban"></i> Quay lại</a>
                </div>
            </div>

        </form>
    </div>
</div>

