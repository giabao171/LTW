@model _19T1021010.DomainModels.Category
@{
    ViewBag.Title = $"Xóa {Model.CategoryName}";
}

<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" action="~/Category/Delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên loại hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CategoryName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Description</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (_19T1021010.BusinessLayers.CommonDataService.InSusedCategory(Model.CategoryID))
                    {
                        <p style="color: red; font-size: 15px">Không được xóa loại hàng này</p>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="glyphicon glyphicon-trash"></i>
                            Đồng ý xóa
                        </button>
                    }

                    <a href="~/Category" class="btn btn-warning"><i class="fa fa-ban"></i> Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</div>

