@model _19T1021010.DomainModels.Customer
@{
    ViewBag.Title = $"Xóa {Model.CustomerName}";
}

<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" action="~/Customer/Delete/@Model.CustomerID" method="post">
            <div class="form-group col-sm-8">
                <label class="control-label col-sm-2">Họ tên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CustomerName</p>
                </div>
            </div>

            <div class="form-group col-sm-8">
                <label class="control-label col-sm-2">Tên giao dịch:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ContactName</p>
                </div>
            </div>


            <div class="form-group col-sm-8">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>

            <div class="form-group col-sm-8">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Address</p>
                </div>
            </div>

            <div class="form-group col-sm-8">
                <label class="control-label col-sm-2">Thành phố:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.City</p>
                </div>
            </div>


            <div class="form-group col-sm-8">
                <label class="control-label col-sm-2">Quốc gia:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Country</p>
                </div>
            </div>

            <div class="form-group col-sm-8">
                <label class="control-label col-sm-2">Mã bưu chính:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.PostalCode</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (_19T1021010.BusinessLayers.CommonDataService.InSusedCustomer(Model.CustomerID))
                    {
                        <p style="color: red; font-size: 15px">Không được xóa khách hàng này</p>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="glyphicon glyphicon-trash"></i>
                            Đồng ý xóa
                        </button>
                    }

                    <a href="~/Customer" class="btn btn-warning"><i class="fa fa-ban"></i> Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</div>

